package week2

object rationals {
  val x = new Rational(1,2)                       //> x  : week2.Rational = week2.Rational@39e87719
  
  x.numer                                         //> res0: Int = 1
}

class Rational(x:Int, y:Int) {
    def numer = x
    def denom = y
    
    def add(r: Rational) : Rational = {
      new Rational((x * r.denom) + (r.denom * y), x * r.denom)
    }
    
    def toString: String = {
     x  + "/" + y
    }
 }