
import forcomp.Anagrams._

object test {

val sentence = List("You", "olive")               //> sentence  : List[String] = List(You, olive)
val big_word = sentence.foldRight("")((x,y) => x + y)
                                                  //> big_word  : String = Youolive
val occurrences = wordOccurrences(big_word)       //> occurrences  : forcomp.Anagrams.Occurrences = List((e,1), (i,1), (l,1), (o,2
                                                  //| ), (u,1), (v,1), (y,1))
    	   
    	   for {
    	     c <- combinations(occurrences)
    	   } yield showWords(dictionaryByOccurrences.get(c))
                                                  //> res0: List[List[forcomp.Anagrams.Word]] = List(List(), List(), List(), List(
                                                  //| ), List(), List(), List(), List(), List(), List(), List(), List(), List(), L
                                                  //| ist(), List(), List(), List(Io), List(), List(), List(), List(), List(), Lis
                                                  //| t(), List(), List(), List(), List(), List(), List(), List(), List(), List(),
                                                  //|  List(), List(), List(), List(Eli, lie), List(), List(), List(), List(vie), 
                                                  //| List(), List(Leo), List(), List(), List(Lev), List(Ely), List(), List(), Lis
                                                  //| t(), List(), List(), List(), List(), List(), List(), List(oil), List(), List
                                                  //| (), List(), List(), List(), List(), List(), List(), List(), List(), List(), 
                                                  //| List(), List(ivy), List(Lou), List(), List(Loy), List(), List(), List(), Lis
                                                  //| t(), List(), List(), List(), List(you), List(), List(), List(), List(), List
                                                  //| (), List(), List(), List(lieu), List(evil, Levi, live, veil, vile), List(), 
                                                  //| List(), List(), List(), List(), List(), List(), List(), List(), List(), List
                                                  //| (), List(love), List(), 
                                                  //| Output exceeds cutoff limit.
    	   
    	   
    	   
 }