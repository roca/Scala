
import forcomp.Anagrams._

object test {

val anas = List(
         List("en", "as", "my"),
         List("en", "my", "as"),
         List("man", "yes"),
         List("men", "say"),
         List("as", "en", "my"),
         List("as", "my", "en"),
         List("sane", "my"),
         List("Sean", "my"),
         List("my", "en", "as"),
         List("my", "as", "en"),
         List("my", "sane"),
         List("my", "Sean"),
         List("say", "men"),
         List("yes","man")
       )                                          //> anas  : List[List[String]] = List(List(en, as, my), List(en, my, as), List(m
                                                  //| an, yes), List(men, say), List(as, en, my), List(as, my, en), List(sane, my)
                                                  //| , List(Sean, my), List(my, en, as), List(my, as, en), List(my, sane), List(m
                                                  //| y, Sean), List(say, men), List(yes, man))
val sentence = List("Yes", "man")                 //> sentence  : List[String] = List(Yes, man)


sentenceAnagrams(sentence).toSet == anas.toSet    //> res0: Boolean = true
                             

                     
                      
                      




 }