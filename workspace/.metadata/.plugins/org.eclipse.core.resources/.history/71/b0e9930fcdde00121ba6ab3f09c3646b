package recfun
import Main._

object scratch {
  
  def factorial(n: BigInt): BigInt = {
	   def loop(acc: BigInt,n: BigInt): BigInt = {
	     if (n == 0) acc
	     else loop( acc * n , n - 1)
	   }
	 loop(1,n)
	}                                         //> factorial: (n: BigInt)BigInt
    factorial(100)                                //> res0: BigInt = 9332621544394415268169923885626670049071596826438162146859296
                                                  //| 3895217599993229915608941463976156518286253697920827223758251185210916864000
                                                  //| 000000000000000000000
  
  
}